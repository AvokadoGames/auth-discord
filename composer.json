  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.0.0",
    "fof/extend": ">=1.0.0",
    "wohali/oauth2-discord-new": "^1.1.0"
  },
  "authors": [
    {
      "name": "Avokado Games",
      "email": "contact@avokadogames.com",
      "role": "Developer"
